#!/usr/bin/env ruby
# seija

FLIP_MAP = {
  'a'=>'É','b'=>'q','c'=>'É”','d'=>'p','e'=>'Ç','f'=>'ÉŸ','g'=>'É“','h'=>'É¥','i'=>'á´‰',
  'j'=>'É¾','k'=>'Êž','l'=>'Êƒ','m'=>'É¯','n'=>'u','o'=>'o','p'=>'d','q'=>'b','r'=>'É¹',
  's'=>'s','t'=>'Ê‡','u'=>'n','v'=>'ÊŒ','w'=>'Ê','x'=>'x','y'=>'ÊŽ','z'=>'z',

  'A'=>'âˆ€','B'=>'ð’','C'=>'Æ†','D'=>'â—–','E'=>'ÆŽ','F'=>'â„²','G'=>'×¤','H'=>'H','I'=>'I',
  'J'=>'Å¿','K'=>'Êž','L'=>'Ë¥','M'=>'W','N'=>'N','O'=>'O','P'=>'Ô€','Q'=>'ÎŒ','R'=>'á´š',
  'S'=>'S','T'=>'â”´','U'=>'âˆ©','V'=>'Î›','W'=>'M','X'=>'X','Y'=>'â…„','Z'=>'Z',

  '?' => 'Â¿',
  '!' => 'Â¡',
  ',' => '\'',
  '.' => 'Ë™',
  "'" => ',',
  '"' => 'â€ž',
  '(' => ')',
  ')' => '(',
  '[' => ']',
  ']' => '[',
  '{' => '}',
  '}' => '{'
}

input = ARGV.join(" ")

if input.empty?
  warn "Usage: seija <text>"
  exit 1
end

flipped = input.each_char.map { |c| FLIP_MAP[c] || c }.reverse.join
puts flipped
